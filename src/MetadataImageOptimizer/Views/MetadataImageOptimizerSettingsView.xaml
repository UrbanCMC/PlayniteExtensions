<UserControl x:Class="MetadataImageOptimizer.Views.MetadataImageOptimizerSettingsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:locals="clr-namespace:MetadataImageOptimizer.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DataContext="{d:DesignInstance locals:MetadataImageOptimizerSettingsViewModel}"
  d:DesignWidth="600"
  mc:Ignorable="d">
  <TabControl>
    <TabItem Header="General">
      <ScrollViewer>
        <locals:GeneralSettingsView DataContext="{Binding}" />
      </ScrollViewer>
    </TabItem>
    <TabItem Header="Quality">
      <ScrollViewer>
        <locals:QualitySettingsView DataContext="{Binding}" />
      </ScrollViewer>
    </TabItem>
    <TabItem Header="Add-ons">
      <ScrollViewer>
        <locals:AddonSettingsView DataContext="{Binding}" />
      </ScrollViewer>
    </TabItem>
  </TabControl>
</UserControl>